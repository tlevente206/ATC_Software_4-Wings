<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="800.0"
            style="-fx-background-color: #ffeecc;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.FourWings.atcSystem.frontend.HomePage.AirportsPageController">

    <children>

        <!-- Cím -->
        <Label layoutX="20.0" layoutY="20.0"
               style="-fx-font-size: 24px;"
               text="Repterek oldal"/>

        <!-- Kijelentkezés gomb -->
        <Button fx:id="logoutButton"
                layoutX="690.0" layoutY="14.0"
                onAction="#onLogout"
                text="Kijelentkezés"/>

        <!-- Menü ComboBox -->
        <ComboBox fx:id="menuComboBox"
                  layoutX="25.0" layoutY="80.0"
                  prefWidth="180.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Főoldal"/>
                    <String fx:value="Repülők"/>
                    <String fx:value="Repterek"/>
                    <String fx:value="Repülőutak"/>
                    <String fx:value="Kapuk(Ez inkább a repterekhez menne)"/>
                    <String fx:value="Terminál(Ez is inkább reptér)"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Keresőmező -->
        <Label layoutX="230.0" layoutY="84.0" text="Keresés:"/>
        <TextField fx:id="searchField"
                   layoutX="285.0" layoutY="80.0"
                   prefWidth="200.0"
                   promptText="Név / város / ICAO"/>

        <!-- Státusz szöveg -->
        <Label fx:id="statusLabel"
               layoutX="25.0" layoutY="370.0"
               text="Repülőterek betöltése..."/>

        <!-- (Opcionális) Frissítés gomb -->
        <Button layoutX="500.0" layoutY="80.0"
                text="Frissítés"
                onAction="#onRefresh"/>

        <!-- Repterek táblázat -->
        <TableView fx:id="airportsTable"
                   layoutX="25.0" layoutY="120.0"
                   prefHeight="230.0" prefWidth="750.0">

            <columns>
                <TableColumn fx:id="icaoCodeColumn"
                             prefWidth="80.0"
                             text="ICAO"/>

                <TableColumn fx:id="nameColumn"
                             prefWidth="220.0"
                             text="Név"/>

                <TableColumn fx:id="cityColumn"
                             prefWidth="180.0"
                             text="Város"/>

                <TableColumn fx:id="elevationColumn"
                             prefWidth="100.0"
                             text="Magasság (ft)"/>

                <TableColumn fx:id="activeRunwayColumn"
                             prefWidth="150.0"
                             text="Aktív futópálya"/>
            </columns>
        </TableView>

    </children>
</AnchorPane>